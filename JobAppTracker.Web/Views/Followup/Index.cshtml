@model IEnumerable<FollowUp>
@{
    ViewData["Title"] = "Follow-ups";
}

<h2>Follow-ups</h2>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Method</th>
            <th>Outcome</th>
            <th>Status</th>
            <th>Notes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FollowUpDate.ToShortDateString()</td>
                <td>@item.FollowUpMethod</td>
                <td>@item.FollowUpOutcome</td>
                <td>@item.Status</td>
                <td>@item.Notes</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" asp-route-jobApplicationId="@ViewBag.JobApplicationId" class="btn btn-primary">Add Follow-up</a>
