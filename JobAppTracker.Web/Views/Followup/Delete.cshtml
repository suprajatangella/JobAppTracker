@model FollowUp
@{
    ViewData["Title"] = "Delete Follow-up";
}

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Follow-up</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <div class="p-3">
                <div class="form-floating py-1 col-12">
                    <input asp-for="Id" disabled class="form-control border shadow" />
                    <label asp-for="Id" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="FollowUpDate" disabled class="form-control border shadow" />
                    <label asp-for="FollowUpDate" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="FollowUpMethod" disabled class="form-control border shadow" />
                    <label asp-for="FollowUpMethod" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="FollowUpOutcome" disabled class="form-control border shadow" />
                    <label asp-for="FollowUpOutcome" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Status" disabled class="form-control border shadow" />
                    <label asp-for="Status" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Notes" disabled class="form-control border shadow" />
                    <label asp-for="Notes" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="FollowUpReminder" disabled class="form-control border shadow" />
                    <label asp-for="FollowUpReminder" class="ms-2"></label>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-check-circle"></i> Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="FollowUp" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

