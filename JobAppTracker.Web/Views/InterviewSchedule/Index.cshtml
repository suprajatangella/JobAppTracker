@model IEnumerable<InterviewSchedule>

@{
    ViewData["Title"] = "Interview Schedules";
}

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Interview Schedules</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="InterviewSchedule" asp-action="CreateInterview" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> Create Interview Schedules
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Candidate Name</th>
                    <th>Position</th>
                    <th>Interview Date</th>
                    <th>Interviewer</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var schedule in Model)
                {
                    <tr>
                        <td>@schedule.User?.FullName</td>
                        <td>@schedule.JobApplication?.JobTitle</td>
                        <td>@schedule.InterviewDate.ToString("g")</td>
                        <td>@schedule.InterviewerName</td>
                        <td>@schedule.Status</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="InterviewSchedule" asp-action="UpdateInterview" asp-route-Id="@schedule.Id"
                                   class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="InterviewSchedule" asp-action="CancelInterview" asp-route-Id="@schedule.Id"
                                   class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
