@model UpdatePasswordVM

<h2>Update User Password</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<div class="container pt-5">
    <div class="card shadow border ">
        <div class="card-header bg-success bg-gradient ml-0 py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="py-2 text-white">Update User Password</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pt-3">
                <div class="col-md-12">
                    <form asp-action="UpdateUserPassword" asp-controller="Account" method="post">
                        <input type="hidden" asp-for="UserId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating mb-3 col-md-12">
                            <input asp-for="Email" class="form-control" aria-required="true" />
                            <label asp-for="Email" class="ms-2 text-muted"></label>
                            <span asp-validation-for="Email" class="text-danger" />
                        </div>
                        <div class="form-floating mb-3 col-md-6">
                            <input asp-for="NewPassword" class="form-control" />
                            <label asp-for="NewPassword" class="ms-2 text-muted"></label>
                            <span asp-validation-for="NewPassword" class="text-danger" />
                        </div>
                        <div class="form-floating mb-3 col-md-6">
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <label asp-for="ConfirmPassword" class="ms-2 text-muted"></label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger" />
                        </div>
                       
                        <div class="col-12">
                            <button type="submit" class="w-100 btn btn-lg btn-outline-success">Update Password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


